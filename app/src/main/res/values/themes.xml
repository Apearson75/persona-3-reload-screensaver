<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Persona3ReloadScreensaver" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Persona3ReloadScreensaver.Fullscreen" parent="Theme.Persona3ReloadScreensaver">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.Persona3ReloadScreensaver.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Persona3ReloadScreensaver.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>